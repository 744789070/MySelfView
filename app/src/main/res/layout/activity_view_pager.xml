<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:orientation="vertical"
    tools:context="com.yk.myselfview.activity.ViewPagerActivity">
    <android.support.v4.view.ViewPager android:layout_width="match_parent"
                                       android:id="@+id/viewpager"
                                       android:layout_marginLeft="80dp"
                                       android:layout_marginRight="80dp"
                                       android:clipChildren="false"
                                       android:layout_height="180dp">
        </android.support.v4.view.ViewPager>

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:id="@+id/ll_con"
                  android:layout_height="match_parent">

        <com.yk.myselfview.views.CustomView android:layout_width="300dp"
                                            android:id="@+id/custom"
                                            android:background="@color/colorAccent"
                                            android:layout_height="300dp">
            <TextView android:layout_width="40dp"
                      android:background="@color/colorPrimary"
                      android:layout_height="40dp"/>
        </com.yk.myselfview.views.CustomView>
        <Button android:layout_width="wrap_content"
                android:text="start"
                android:onClick="startscrol"
                android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>
