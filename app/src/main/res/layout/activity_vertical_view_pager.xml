<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.yk.myselfview.activity.VerticalViewPagerActivity">

    <TextView android:layout_width="match_parent"
              android:gravity="center"
              android:text="VerticalViewPager"
              android:textSize="20sp"
              android:id="@+id/tv"
              android:layout_marginTop="50dp"
              android:layout_height="wrap_content"/>
    <TextView android:layout_width="match_parent"
              android:gravity="center"
              android:layout_below="@+id/tv"
              android:padding="10dp"
              android:text="继承与ViewPager,与ViewPager完全一样的用法,只是滑动方向不同"
              android:textSize="16sp"
              android:layout_height="wrap_content"/>

    <com.yk.myselfview.views.VerticalViewPager android:layout_width="match_parent"
                                               android:layout_centerInParent="true"
                                               android:id="@+id/vertical_viewpager"
                                               android:layout_height="240dp">

    </com.yk.myselfview.views.VerticalViewPager>
</RelativeLayout>
